@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome";
@import "font-awesome-sprockets";
@import 'home';
@import 'devise';

$green: #4abdac;
$red: #fc4a1a;
$sunshine: #f7b733;
$grey: #dfdce3;

.top-space{
	margin-top: -2%;
}
.logo-sessions{
	width:70%;
	transition: all 0.7s ease;
}
.logo-sessions:hover{
	-webkit-filter: grayscale(100%); /* Safari 6.0 - 9.0 */
    filter: grayscale(100%);
}
.container-fluid{}
.input-shadow{
	height: 50px;font-size: 20px;color: #333;
	transition: all 0.4s ease;
}
.red-shadow{
	  -webkit-box-shadow: 0px 5px 8px 1px $red !important; /* Android 2.3+, iOS 4.0.2-4.2, Safari 3-4 */
          box-shadow: 0px 5px 8px 1px $red !important;
}
.green-shadow{
	  -webkit-box-shadow: 0px 5px 8px 1px $green !important; /* Android 2.3+, iOS 4.0.2-4.2, Safari 3-4 */
          box-shadow: 0px 5px 8px 1px $green !important;
}
label{color:#899999;}
.btn-success{
	background-color: $green !important;color:#fff;
	transition: all 0.4s ease !important;
	border-color: $green !important;
	border-radius: 3px !important;
}
.btn-success:hover{
	background-color: $grey !important;color:$green;
}
.btn-primary{
	background-color: $sunshine !important;color:#fff;
	transition: all 0.4s ease !important;
	border-color: $sunshine !important;
	border-radius: 3px !important;
}
.btn-primary:hover{
	background-color: $grey !important;color:$sunshine;
}
.btn-info{
	background-color: $red !important;color:#fff;
	transition: all 0.4s ease !important;
	border-color: $red !important;
	border-radius: 3px !important;
}
.btn-info:hover{
	background-color: $grey !important;color:$red;
}
.container{
	background-color: #333333;
}